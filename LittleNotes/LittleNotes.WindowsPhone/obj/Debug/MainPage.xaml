<Page
    x:Class="LittleNotes.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LittleNotes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <GridView x:Name="NotesGrid" HorizontalAlignment="Left" Height="620" Margin="10,10,0,0" VerticalAlignment="Top" Width="380">
            <Button x:ConnectionId='3' x:Name="NewNoteBtn" Content="New Note"                         />

        </GridView>
        <TextBox x:Name="Notepad" HorizontalAlignment="Left" Margin="10,67,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Height="458" Width="380" AllowDrop="True" Visibility="Collapsed"/>
        <AppBarButton x:ConnectionId='1' x:Name="SaveClose" Icon="Accept" Label="Save and Close" Margin="30,535,0,0" Height="92"                        >
            
        </AppBarButton>
        <AppBarButton x:ConnectionId='2' x:Name="Delete" Icon="Delete" Label="Delete Selected" Height="90" Width="81" Margin="128,537,0,0"                     />

    </Grid>
</Page>

